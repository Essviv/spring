<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.cmcc.syw.dao.ArticleMapper">
    <resultMap id="BaseResultMap" type="com.cmcc.syw.model.Article">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="title" property="title" jdbcType="VARCHAR"/>
        <result column="content" property="content" jdbcType="VARCHAR"/>

        <!-- 联合映射 -->
        <association property="author" javaType="com.cmcc.syw.model.Author">
            <id column="aid" property="id" jdbcType="BIGINT"/>
            <result column="name" property="name" jdbcType="VARCHAR"/>
            <result column="age" property="age" jdbcType="INTEGER"/>
        </association>
    </resultMap>

    <select id="list" resultMap="BaseResultMap">
    SELECT
      a.id, a.title, a.content, o.id AS aid, o.name, o.age
    FROM
      article a
    LEFT JOIN
      author o
    ON
      (a.authorId = o.id)
  </select>
</mapper>