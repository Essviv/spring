<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.cmcc.syw.dao.AuthorMapper">
    <resultMap id="BaseResultMap" type="com.cmcc.syw.model.Author">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="age" property="age" jdbcType="INTEGER"/>
    </resultMap>
    <sql id="Base_Column_List">
    id, name, age
  </sql>

    <insert id="insert" parameterType="com.cmcc.syw.model.Author">
    insert into author (id, name, age)
    values (#{id,jdbcType=BIGINT}, #{name,jdbcType=VARCHAR}, #{age,jdbcType=INTEGER})
  </insert>

    <insert id="batchInsert" parameterType="java.util.List">
        INSERT INTO author(id, name, age) values
        <foreach collection="authors" item="author" separator=",">
            (#{author.id, jdbcType=BIGINT}, #{author.name,jdbcType=VARCHAR}, #{author.age,jdbcType=INTEGER})
        </foreach>
    </insert>

    <update id="update" parameterType="com.cmcc.syw.model.Author">
        UPDATE
          author
        SET
          age = #{age, jdbcType=INTEGER}
        WHERE
          id = #{id, jdbcType=BIGINT}
    </update>

    <update id="batchUpdate" parameterType="java.util.List">
            UPDATE
              author
            SET
              age =
            CASE id
              <foreach collection="authors" item="author" separator=" ">
                WHEN #{author.id, jdbcType=BIGINT} THEN #{author.age, jdbcType=INTEGER}
              </foreach>
            END
            WHERE
              id in
            <foreach collection="authors" item="author" separator="," open="(" close=")">
                #{author.id, jdbcType=BIGINT}
            </foreach>
    </update>
</mapper>